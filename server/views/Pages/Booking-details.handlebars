<section>

  <div class="booking">
    <div class="row">
      <div class="col-3">
        <button class="btn btn-sm w-100">
          <i class="fa-solid fa-location-dot mr-2"></i>Xem điểm đón trên bản đồ
          <span id="id" style="display: none;" >{{data.id}}</span>
        </button>

        {{#each data.checked}}
          <span class="checkedSeat" style="display: none;">{{this}}</span>
        {{/each}}
      </div>
    </div>
    <div class="row booking__main">
      <div class="w-100 booking__section">
        <div class="booking__section-title">
          <div class="w-75">
            <i class="fa-solid fa-bus"></i>
            <span>Chặng: <b>{{data.start}} -{{data.end}}</b>  </span>
          </div>
        </div>

        <div class="booking__product">
          <!-- Product header -->
          <article class="row product-header">
            <section class="col-6 text-center">
              <span><h1>{{data.nhaxe}}</h1></span>
              <p>{{data.type}}</p>
              <span><h2>Giá :</h2> <h1 id="price">{{data.price}}</h1></span>
            </section>

            <section class="col-5 m-auto">
              <div class="d-flex justify-content-between">
                <span>{{data.start}}</span>
                <span>{{data.end}}</span>
              </div>
              <div
                class="icon-section d-flex justify-content-around my-3 align-items-center"
              >
                <i class="fa-solid fa-location-dot"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-circle"></i>
                <i class="fa-solid fa-location-dot"></i>
              </div>
              
              <div class="d-flex justify-content-between">
                <h4 class="" style="color: black;">{{data.timeStart}}</h4>
                <h4 class="" style="color: black;">{{data.timeEnd}}</h4>
              </div>
              <div class="text-center mt-3"><h2>Ngày: {{data.date}}</h2></div>
            </section>
          </article>
          <img src={{data.img}} alt="NhaxeImg" />
          <p class="product-description">
            {{data.description}}
          </p>
        </div>


        <div class="booking__steps">
          <div
            id="carouselExampleIndicators"
            class="carousel slide"
            data-interval="false"
          >
            <div class="carousel-indicators">
              <button
                class="carousel-control-prev carousel-icon"
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <section class="d-flex justify-content-around w-50">
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="0"
                  class="active"
                  aria-current="true"
                  aria-label="Slide 1"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="1"
                  aria-label="Slide 2"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="2"
                  aria-label="Slide 3"
                ></button>
              </section>


              <button
                class="carousel-control-next carousel-icon"
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next"
              >
                <span class="visually-hidden">Next</span>
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
              </button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <div id="step-1">
                  <div class="col-4">
                    <h1>Chú thích</h1>
                    <div class="seat-type">
                      <div class="seat-icon mr-2"></div>
                      Ghế trống
                    </div>
                    <div class="seat-type">
                      <div class="seat-icon seat-icon--select mr-2"></div>
                      Ghế đang chọn
                    </div>
                    <div class="seat-type">
                      <div class="seat-icon seat-icon--checked mr-2"></div>
                      Ghế đã bán
                    </div>

                  </div>
                  <div class="col-2 m-auto seats-model">
                    <div class="w-100 my-1 text-center">
                      <i class="fa-solid fa-circle-notch"></i>
                    </div>
                      {{#each (range 1 10 1)}}
                        <div class="w-50 my-1">
                          <div position="{{this}}" class="seat-icon m-auto"></div>
                        </div>
                      {{/each}}
                    
                  </div>
                  <div class="col-2 m-auto seats-model">
                     {{#each (range 11 22 1)}}
                        <div class="w-50 my-1">
                          <div position="{{this}}" class="seat-icon m-auto"></div>
                        </div>
                      {{/each}}
                  </div>
                </div>
                <div class="total-price d-flex">
                  <h1 class="mr-4">Tổng cộng:</h1>
                  <h2 id="TOTAL">0</h2>
                </div>
                <div class="total-price d-flex">
                  <h1 class="mr-4">Ghế:</h1>
                  <h2 id="SEATS"></h2>
                </div>
              </div>
              <div class="carousel-item">
                <div id="step-2">


                  <div class="col-6">
                    <h3>Điểm đón</h3>

                    <section class="container">

                      {{#each data.startDes}}
                        <div class="location-item">
                          <div class="d-flex align-items-center">
                            <input
                              required
                              type="radio"
                              name="start-point"
                              form="SubmitForm"
                              value="{{this}}"
                            />
                            <label for="">{{this}} </label>
                          </div>
                          <div class="ml-4 mt-2">
                            <i class="fa-solid fa-location-dot"></i>
                            <span>
                              85C Nguyễn Cư Trinh, Phường Nguyễn Cư Trinh, Quận 1,
                              Hồ Chí Minh
                            </span>

                          </div>
                        </div>
                      {{/each}}

                    </section>
                  </div>
                  <div class="col-6">
                    <h3>Điểm trả</h3>
                    <section class="container">

                      {{#each data.endDes}}
                        <div class="location-item">
                          <div class="d-flex align-items-center">
                            <input
                              required
                              type="radio"
                              name="end-point"
                              form="SubmitForm"
                              value="{{this}}"
                            />
                            <label for="">{{this}}</label>
                          </div>
                          <div class="ml-4 mt-2">
                            <i class="fa-solid fa-location-dot"></i>
                            <span>
                              85C Nguyễn Cư Trinh, Phường Nguyễn Cư Trinh, Quận 1,
                              Hồ Chí Minh
                            </span>
                          </div>
                        </div>
                      {{/each}}
                    
                    </section>
                  </div>


                </div>
              </div>
              <div class="carousel-item">
                <div id="step-3">
                  <form
                    class="w-100"
                   
                    id="SubmitForm"
                       
                  >
                    <section class="w-50 m-auto">
                      <h1>Họ tên:</h1>
                      <input type="text" name="name" id="name" required />
                    </section>
                    <section class="w-50 m-auto">
                      <h1>Số điện thoại:</h1>
                      <input
                        type="tel"
                        id="tel"
                        pattern="[0-9]{10}"
                        name="tel"
                        required
                      />
                    </section>
                    <section class="w-50 m-auto">
                      <h1>Email:</h1>
                      <input
                        type="email"
                        id="email"
                        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
                        name="email"
                        required
                      />
                    </section>
                    <section class="w-50 m-auto">
                      <h2>Ghi chú:</h2>
                      <textarea
                        class="w-100 p-2"
                        name=""
                        id="note"
                        cols="30"
                        rows="4"
                        placeholder="Các yêu cầu đặc biệt có thể không được đảm bảo - nhưng nhà xe sẽ cố gắng hết sức đáp ứng nhu cầu của bạn"
                      ></textarea>
                    </section>
                  </form>

                  <button
                  form="SubmitForm"
                    id="SUBMIT"
                    class="btn btn-sm py-2 px-4"
                    type="submit"
                  >
                    Xác nhận
                  </button>
                 
                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/javascripts/Booking-details.js">

  </script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
  ></script>
</section>